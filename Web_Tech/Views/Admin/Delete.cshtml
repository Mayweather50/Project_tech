@model Web_Tech.Models.Markup
@{
    ViewBag.Title = "Удаление пользователя";
}

<div>
    <dl class="dl-horizontal">
        <dt>Название</dt>
        <dd>
            @Html.DisplayFor(model => model.NamePage)
        </dd>

        <dt>Ссылка</dt>
        <dd>
            @Html.DisplayFor(model => model.Body)
        </dd>
    </dl>

    <div>
        <form asp-controller="Admin" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>
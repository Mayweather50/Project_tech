@model Web_Tech.Models.Markup
@{
    ViewBag.Title = "Редактирование пользователя";
}

<form asp-action="edit" asp-controller="admin" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="NamePage" class="control-label">Название страницы</label>
        <input type="text" asp-for="NamePage" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Body" class="control-label">Ссылка</label>
        <input type="text" asp-for="Body" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>


























